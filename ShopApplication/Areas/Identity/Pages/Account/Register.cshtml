@page
@model RegisterModel
@{
    Layout = "/Views/Shared/_Identity.cshtml";
}
<div class="container-login100" style="background-image: url('@Url.Content("~/img/Identity/images/bg-01.jpg")');">
	<div class="wrap-login100 p-l-55 p-r-55 p-t-80 p-b-30">
		<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="login100-form validate-form">
			<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
			<span class="login100-form-title p-b-37">
				Sign Up
			</span>

			<div class="wrap-input100 validate-input m-b-20" data-validate="Enter username or email">
				<input asp-for="Input.Email" class="input100" type="text" name="username"  aria-required="true" placeholder="username or email">
				<span class="focus-input100"></span>
			</div>

			<div class="wrap-input100 validate-input m-b-25" data-validate="Enter password">
				<input asp-for="Input.Password" class="input100" type="password" name="pass" aria-required="true" placeholder="password">
				<span class="focus-input100"></span>
			</div>

			<div class="wrap-input100 validate-input m-b-25" data-validate="Enter password">
				<input asp-for="Input.ConfirmPassword" class="input100" type="password" name="pass" aria-required="true" placeholder="Confirm password">
				<span class="focus-input100"></span>
			</div>

			<div class="container-login100-form-btn">
				<button id="registerSubmit" type="submit" class="login100-form-btn">
					Sign Up
				</button>
			</div>

		</form>
		<div class="text-center p-t-57 p-b-20">
			<span class="txt1">
				Or login with
			</span>
		</div>

		<div class="flex-c p-b-112">
			<a href="#" class="login100-social-item">
				<i class="fa fa-facebook-f"></i>
			</a>

			<a href="#" class="login100-social-item">
				<img src="~/img/Identity/images/icons/icon-google.png" alt="GOOGLE">
			</a>
		</div>

		<div class="text-center">
			<a id="login" asp-area="Identity" asp-page="/Account/Login">
				Sign in
			</a>
		</div>

	</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
