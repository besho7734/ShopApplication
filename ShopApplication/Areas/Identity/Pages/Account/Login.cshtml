@page
@model LoginModel
@{
	Layout = "/Views/Shared/_Identity.cshtml";
}
	<div class="container-login100" style="background-image: url('@Url.Content("~/img/Identity/images/bg-01.jpg")');">
	<div class="wrap-login100 p-l-55 p-r-55 p-t-80 p-b-30">
		<form id="account" method="post" class="login100-form validate-form">
				<span class="login100-form-title p-b-37">
					Sign In
				</span>

				<div class="wrap-input100 validate-input m-b-20" data-validate="Enter username or email">
				<input asp-for="Input.Email" class="input100" type="text" name="username" autocomplete="username" aria-required="true" placeholder="username or email">
				<span class="focus-input100"></span>
			</div>

				<div class="wrap-input100 validate-input m-b-25" data-validate = "Enter password">
				<input asp-for="Input.Password" class="input100" type="password" name="pass" autocomplete="current-password" aria-required="true" placeholder="password">
				<span class="focus-input100"></span>
			</div>

				<div class="container-login100-form-btn">
				<button id="login-submit" type="submit" class="login100-form-btn">
						Sign In
					</button>
				</div>

				<div class="text-center p-t-57 p-b-20">
					<span class="txt1">
						Or login with
					</span>
				</div>

				<div class="flex-c p-b-112">
					<a href="#" class="login100-social-item">
						<i class="fa fa-facebook-f"></i>
					</a>

					<a href="#" class="login100-social-item">
						<img src="~/img/Identity/images/icons/icon-google.png" alt="GOOGLE">
					</a>
				</div>

				<div class="text-center">
					 <a id="register" asp-area="Identity" asp-page="/Account/Register">
						Sign Up
					</a>
				</div>
			</form>

			
		</div>
	</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
