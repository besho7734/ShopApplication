@model Blog
@{
    Layout = "_DashBoard";
}
<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">Editing Blog</span>
        </div>

        <div>
            <form method="post" asp-action="EditBlog" class="row">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Blog Title</label>
                    <input type="text"
                           asp-for="Title"
                           value="@Model.Title"
                           class="form-control"
                           placeholder="" />

                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Blog Description</label>
                    <textarea type="text"
                              class="form-control"
                              asp-for="Description"
                              placeholder="">@Model.Description</textarea>
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="Author" class="form-label">Blog Author</label>
                    <input type="text"
                           asp-for="Author"
                           value="@Model.Author"
                           class="form-control"
                           placeholder=""></input>
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="Img" class="form-label">Blog Image</label>
                    <input type="number"
                           asp-for="Img"
                           value="@Model.Img"
                           class="form-control"
                           placeholder=""></input>
                </div>

                <div class="col-lg-12 d-flex justify-content-center  ">

                    <button type="submit" class="btn btn-primary">Submit</button>

                </div>
            </form>

        </div>
    </div>
</div>