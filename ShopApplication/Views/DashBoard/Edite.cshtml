@model Product
@{
    Layout = "_DashBoard";
}

<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">Editing Product</span>
        </div>

        <div>
            <form method="post" asp-action="Edite" class="row">
                <div class="mb-3">
                    <label asp-for="Name" for="" class="form-label">Product Name</label>
                    <input type="text"
                           asp-for="Name"
                           value="@Model.Name"
                           class="form-control"
                           placeholder="" />

                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Product Description</label>
                    <textarea type="text"
                              asp-for="Description"
                              class="form-control"
                              placeholder="">@Model.Description</textarea>
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="img" class="form-label">Product image</label>
                    <input type="text"
                           asp-for="img"
                           value="@Model.img"
                           class="form-control"
                           placeholder=""></input>
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="Price" class="form-label">Product Price</label>
                    <input type="number"
                           asp-for="Price"
                           value="@Model.Price"
                           class="form-control"
                           placeholder=""></input>
                </div>

                <div class="mb-3 col-lg-6">
                    <label asp-for="CategoryID" class="form-label">category</label>
                    <select class="form-select " asp-for="CategoryID">
                        @{
                            if (Model.CategoryID == 1)
                            {
                                <option>Select one</option>
                                <option selected value="1">Clothing</option>
                                <option value="2">Shoes</option>
                                <option value="3">Bags</option>
                                <option value="4">Accessories</option>
                            }
                            else if (Model.CategoryID == 2)
                            {
                                <option >Select one</option>
                                <option value="1">Clothing</option>
                                <option selected value="2">Shoes</option>
                                <option value="3">Bags</option>
                                <option value="4">Accessories</option>
                            }
                            else if(Model.CategoryID==3)
                            {
                                <option>Select one</option>
                                <option value="1">Clothing</option>
                                <option value="2">Shoes</option>
                                <option selected value="3">Bags</option>
                                <option value="4">Accessories</option>
                            }
                            else if(Model.CategoryID == 4)
                            {
                                <option>Select one</option>
                                <option value="1">Clothing</option>
                                <option value="2">Shoes</option>
                                <option value="3">Bags</option>
                                <option selected value="4">Accessories</option>
                            }
                            else
                            {
                                <option selected>Select one</option>
                                <option value="1">Clothing</option>
                                <option value="2">Shoes</option>
                                <option value="3">Bags</option>
                                <option value="4">Accessories</option>
                            }
                        }

                    </select>
                </div>


                <div class="col-lg-12 d-flex justify-content-center  ">

                    <button type="submit" class="btn btn-primary">Submit</button>

                </div>
            </form>

        </div>
    </div>
</div>