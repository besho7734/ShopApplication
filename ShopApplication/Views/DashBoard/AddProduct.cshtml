@model Product
@{
    Layout = "_DashBoard";
}

<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">Adding Product</span>
        </div>

        <div>
            <form method="post" asp-action="AddProduct" class="row">
                <div class="mb-3">
                    <label asp-for="Name" for="" class="form-label">Product Name</label>
                    <input type="text"
                           asp-for="Name"
                           class="form-control"
                           placeholder="" />
                    <span asp-validation-for="Name" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Product Description</label>
                    <textarea type="text"
                              asp-for="Description"
                              class="form-control"
                              placeholder=""></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="Price" class="form-label">Product Price</label>
                    <input type="number"
                           asp-for="Price"
                           class="form-control"
                           placeholder=""></input>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="img" class="form-label">Product image</label>
                    <input type="text"
                           asp-for="img"
                           class="form-control"
                           placeholder=""></input>
                    <span asp-validation-for="img" class="text-danger"></span>
                 </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="CategoryID" class="form-label">Category</label>
                    <select class="form-select " asp-for="CategoryID">
                        <option selected>Select one</option>
                        <option value="1">Clothing</option>
                        <option value="2">Shoes</option>
                        <option value="3">Bags</option>
                        <option value="4">Accessories</option>
                    </select>
                    <span asp-validation-for="CategoryID" class="text-danger"></span>
                </div>
                <div class="col-lg-12 d-flex justify-content-center  ">

                    <button type="submit" class="btn btn-primary">Submit</button>

                </div>
            </form>

        </div>
    </div>
</div>