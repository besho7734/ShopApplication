@model IEnumerable<Cart>
@{
    Layout = "_shop";
    decimal x = 0;
    decimal y = 0;
    List<int> q = new List<int>();
}
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>Shopping Cart</h4>
                    <div class="breadcrumb__links">
                        <a href="./index.html">Home</a>
                        <a href="./shop.html">Shop</a>
                        <span>Shopping Cart</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Shopping Cart Section Begin -->
<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="shopping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var cart in Model)
                            {
                                <tr>
                                    <td class="product__cart__item">
                                        <div class="product__cart__item__pic">
                                            <img asp-for="@cart.product.img" src="~/img/product/@cart.product.img" alt="">
                                        </div>
                                        <div class="product__cart__item__text">
                                            <h6 asp-for="@cart.product.Name">@cart.product.Name</h6>
                                            <h5 asp-for="@cart.product.Price" >$@cart.product.Price</h5>
                                        </div>
                                    </td>
                                    <td class="quantity__item">
                                        <div class="quantity">
                                            <div class="pro-qty-2">
                                                <input type="text" asp-for="@cart.Quantity" value="@cart.Quantity">
                                            </div>
                                        </div>
                                    </td>
                                    @{
                                        x = @cart.product.Price * @cart.Quantity;
                                        y += x;
                                        q.Add(cart.Quantity);
                                    }
                                    <td class="cart__price">$ @x </td>
                                    <td class="cart__close"><a asp-controller="Shop" asp-action="DeleteShopCart" asp-route-id="@cart.Id"><i class="fa fa-close"></i></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="continue__btn">
                            <a asp-controller="Shop" asp-action="Shop" >Continue Shopping</a>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="continue__btn update__btn">
                            <a asp-controller="Shop" asp-action="UpdateShopCart" asp-route-q="q" ><i class="fa fa-spinner"></i> Update cart</a>
                        </div>
                    </div>
                </div>
            </div>
            <div>
                @foreach(var c in q)
                {
                    c.ToString();
                }
            </div>
            <div class="col-lg-4">
                <div class="cart__discount">
                    <h6>Discount codes</h6>
                    <form action="#">
                        <input type="text" placeholder="Coupon code">
                        <button type="submit">Apply</button>
                    </form>
                </div>
                <div class="cart__total">
                    <h6>Cart total</h6>
                    <ul>
                        <li>Subtotal <span>$ @y </span></li>
                        <li>Total <span>$ @y</span></li>
                    </ul>
                    <a href="#" class="primary-btn">Proceed to checkout</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shopping Cart Section End -->