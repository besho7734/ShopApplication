@model IEnumerable<Cart>
@{
    Layout = "_shop";
    decimal x = 0;
    decimal y = 0;
}
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>Shopping Cart</h4>
                    <div class="breadcrumb__links">
                        <a asp-action="Index">Home</a>
                        <a asp-action="Shop">Shop</a>
                        <span>Shopping Cart</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Shopping Cart Section Begin -->
<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="shopping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var cart in Model)
                            {
                                <tr>
                                    <td class="product__cart__item">
                                        <div class="product__cart__item__pic">
                                            <img asp-for="@cart.product.img" src="~/img/product/@cart.product.img" alt="">
                                        </div>
                                        <div class="product__cart__item__text">
                                            <h6 asp-for="@cart.product.Name">@cart.product.Name</h6>
                                            <h5 asp-for="@cart.product.Price" >$@cart.product.Price</h5>
                                        </div>
                                    </td>
                                        <td class="quantity__item">
                                            <div class="quantity">
                                                <div class="pro-qty-2">
                                                    <input class="Quantity" name="" type="text" asp-for="@cart.Quantity" value="@cart.Quantity">
                                                    <input class="CartId" type="hidden" asp-for="@cart.Id">
                                                </div>
                                            </div>
                                    </td>
                                    @{
                                        x = @cart.product.Price * @cart.Quantity;
                                        y += x;
                                    }
                                    <td class="cart__price">$ @x </td>
                                    <td class="cart__close"><a asp-controller="Shop" asp-action="DeleteShopCart" asp-route-id="@cart.Id"><i class="fa fa-close"></i></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="continue__btn">
                            <a asp-controller="Shop" asp-action="Shop" >Continue Shopping</a>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="continue__btn update__btn">
                            <a href="#" id="updateCartButton"><i class="fa fa-spinner"></i> Update cart</a>
                        </div>
                    </div>
                </div>
            </div>
  
            <div class="col-lg-4">
                <div class="cart__discount">
                    <h6>Discount codes</h6>
                    <form action="#">
                        <input type="text" placeholder="Coupon code">
                        <button type="submit">Apply</button>
                    </form>
                </div>
                <div class="cart__total">
                    <h6>Cart total</h6>
                    <ul>
                        <li>Subtotal <span>$ @y </span></li>
                        <li>Total <span>$ @y</span></li>
                    </ul>
                    <a href="#" class="primary-btn">Proceed to checkout</a>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const updateCartButton = document.getElementById('updateCartButton');

        updateCartButton.addEventListener("click", async (event) => {
            event.preventDefault(); // Prevent the default link behavior

            const quantityInputs = document.querySelectorAll('.Quantity');
            const idInputs = document.querySelectorAll('.CartId');

            // Prepare data for sending
            const cartItems = Array.from(quantityInputs).map((input, index) => {
                const quantity = parseInt(input.value, 10);
                const id = parseInt(idInputs[index].value, 10);

                if (isNaN(quantity) || isNaN(id)) {
                    console.error('Invalid input values');
                    return null; // Skip invalid data
                }

                return { quantity, id };
            }).filter(item => item !== null); // Remove any invalid items

            if (cartItems.length === 0) {
                console.error('No valid items to update');
                return;
            }

            // Get CSRF token from meta tag
            const csrfTokenMeta = document.querySelector('meta[name="csrf-token"]');
            const csrfToken = csrfTokenMeta ? csrfTokenMeta.getAttribute('content') : '';

            try {
                // Send data to the server
                const response = await fetch('/Shop/UpdateShopCart', {
                    method: 'POST', // or 'PUT' depending on your API
                    headers: {
                        'Content-Type': 'application/json',
                        'X-CSRF-TOKEN': csrfToken // Include CSRF token if available
                    },
                    body: JSON.stringify(cartItems)
                });

                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }

                // Handle success or reload the page
                console.log('Cart updated successfully');
                window.location.reload(); // Optional: reload to reflect changes
            } catch (error) {
                console.error('Failed to update cart:', error);
            }
        });
    });
</script>
<!-- Shopping Cart Section End -->